{
  "openapi": "3.0.3",
  "info": {
    "title": "Powertools API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/filter": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "POST /filter",
        "description": "Returns a filtered list of users filtered according to the given filtering criteria",
        "operationId": "filter_users_filter_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FilterUsersRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          },
          "400": {
            "description": "Filtering failed, invalid criteria",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilterUsersResponse",
                  "description": "Filtered list of users"
                }
              }
            }
          },
          "200": {
            "description": "List of users successfully fitlered",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilterUsersResponse",
                  "description": "Filtered list of users"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FilterUsersRequest": {
        "properties": {
          "users": {
            "items": {
              "$ref": "#/components/schemas/User"
            },
            "type": "array",
            "title": "Users"
          },
          "filtering_criteria": {
            "type": "string",
            "maxLength": 1000,
            "title": "Filtering Criteria"
          }
        },
        "type": "object",
        "required": [
          "users",
          "filtering_criteria"
        ],
        "title": "FilterUsersRequest"
      },
      "FilterUsersResponse": {
        "properties": {
          "filtered_users": {
            "items": {
              "$ref": "#/components/schemas/User"
            },
            "type": "array",
            "title": "Filtered Users"
          }
        },
        "type": "object",
        "required": [
          "filtered_users"
        ],
        "title": "FilterUsersResponse"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "User": {
        "properties": {
          "id": {
            "type": "integer",
            "title": "Id"
          },
          "name": {
            "type": "string",
            "title": "Name"
          },
          "age": {
            "type": "integer",
            "title": "Age"
          },
          "city": {
            "type": "string",
            "title": "City"
          }
        },
        "type": "object",
        "required": [
          "id",
          "name",
          "age",
          "city"
        ],
        "title": "User"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      },
      "ResponseValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "ResponseValidationError"
      }
    }
  }
}
